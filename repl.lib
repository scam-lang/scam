(define (repl)
    (define e nil)
    (define result nil)
    (set! e (catch (readExpr)))
    (while (and (neq? e 'quit) (neq? e 'q))
        (if (and (error? e) (eq? (get 'code e) 'emptyExpression))
            (begin
                (println)
                (return 'done))
                )
        (set! result (catch (eval e this)))
        (if (error? result)
            (println "EXCEPTION: " (get 'code result) ","
                (suffix (get 'value result) (+ 1 (stringUntil (get 'value result) ":")))
                )
            (println result)
            )
        (set! e (catch (readExpr)))
        )
    )
(print "Welcome to the Scam Interpreter!")
(println " To exit, enter <Ctl>-D, q, or quit")
(repl)
(println "Happy happy, joy joy!");
